{
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "es2017",
		"lib": ["es2017"],
		"allowJs": false,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": true
	},
	"compileOnSave": true,
	"include": [
		"./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}